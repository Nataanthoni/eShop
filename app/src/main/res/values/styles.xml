<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Eshop" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- Splash screen theme  -->
    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Widget.Eshop.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Eshop</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Eshop.Toolbar</item>
    </style>

    <style name="Widget.Eshop.Toolbar.Filter" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Eshop</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Eshop.Toolbar</item>
    </style>

    <style name="TextAppearance.Eshop.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Eshop.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Eshop.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.Eshop.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Eshop.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/es_next_button_state_list_anim</item>
    </style>

    <style name="Widget.Eshop.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Eshop.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Eshop.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Theme.Eshop.Filter">
        <item name="android:textAppearance">@style/Widget.Eshop.TextView</item>
    </style>

    <style name="Widget.Eshop.SectionItem" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/es_standard_spacing</item>
        <item name="android:paddingBottom">@dimen/es_standard_spacing</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.Eshop.SectionItem.Container">
        <item name="android:layout_marginBottom">@dimen/es_small_spacing</item>
        <item name="android:paddingLeft">@dimen/es_standard_spacing</item>
        <item name="android:paddingRight">@dimen/es_standard_spacing</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.Eshop.TextView" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Eshop.Filter</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.Eshop.TextView.SectionHeader">
        <item name="android:textAppearance">@style/TextAppearance.Eshop.Filter.SubHead</item>
    </style>

    <style name="Widget.Eshop.TextView.SectionHeaderEnd">
        <item name="android:layout_weight">0</item>
        <item name="android:textSize">@dimen/shrine_section_header_text_size</item>
    </style>

    <style name="TextAppearance.Eshop.Filter" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Eshop.Filter.SubHead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/shrine_section_header_text_size</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

</resources>
